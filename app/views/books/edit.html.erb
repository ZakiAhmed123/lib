<body>
  <% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |error| %>
  <strong><%= error %></strong>
  <% end %>
<% end %>
      <%= form_for @book, url: book_path(id: @book.id) do |f| %>
      <div class="newform">
        <p>Insert Title<p><%= f.text_area :title, cols: "30", rows: "1"%></p></p>
        <p>Insert Price<p><%= f.text_area :price, cols: "15", rows:"1"%></p></p>
        <p>Photo URL<p><%= f.text_area :photo_id, cols: "15", rows:"1"%></p></p>
        <p>  <%= f.label :author %> </p>
      <p>    <%= f.collection_select :author_id, Author.all, :id, :full_name, {prompt: true},  {class: "form-control"} %>
      </p>
        <p><%= f.submit class:"submit" %></p>
        <%= link_to 'Delete Book', book_path(id: @book.id), method: :delete, data: {confirm: "Are you sure you want to DELETE?"}, class: "deletebttn" %></div>

     </div>

      <% end %></div>
</body>
