<body>
  <% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |error| %>
  <strong><%= error %></strong>
  <% end %>
<% end %>
      <%= form_for @author, url: author_path(id: @author.id) do |f| %>
      <div class="newform">
        <p>Edit First Name<p><%= f.text_area :first_name, cols: "30", rows: "1"%></p></p>
        <p>Edit Last Name<p><%= f.text_area :last_name, cols: "30", rows: "1"%></p></p>
        <p>Edit bio<p><%= f.text_area :bio, cols: "15", rows:"1"%></p></p>
        <p>Insert Photo URL<p><%= f.text_area :photo_id, cols: "50", rows: "1"%></p></p>
      <p><%= f.submit class:"submit" %></p>
      <% end %></div>
<%= link_to 'Delete Author', author_path(id: @author.id), method: :delete, data: {confirm: "Are you sure you want to DELETE?"}, class: "assss" %></div>

</body>
